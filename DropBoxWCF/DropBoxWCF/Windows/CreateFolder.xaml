<Window x:Class="DropBoxWCF.Windows.CreateFolder"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DropBoxWCF.Windows"
        mc:Ignorable="d" ResizeMode="NoResize" WindowStartupLocation="CenterScreen"
        Title="Creating folder" Height="100" Width="300">
    <Grid>
        <TextBlock Text="Folder name" Margin="10" HorizontalAlignment="Center" FontSize="15"/>
        <StackPanel Orientation="Horizontal">
            <TextBox Width="200" Margin="10" Name="tbName"/>
            <Button Width="40" Padding="0" FontSize="15" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0 15 -50 0" Height="30" Content="V" Click="Button_Click"/>
        </StackPanel>

    </Grid>
</Window>
